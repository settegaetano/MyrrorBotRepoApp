<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listItemMeteo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPurpleDark"
        app:cardCornerRadius="@dimen/activity_horizontal_margin"
        app:cardElevation="@dimen/activity_horizontal_margin">


        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="60dp"
            android:layout_height="200dp"
            app:cardBackgroundColor="@color/colorPurpleDark">


            <TextView
                android:id="@+id/textViewdate1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/colorTextInfo" />

            <ImageView
                android:id="@+id/imageViewWheater1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"

                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textViewtemp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:gravity="center"

                android:text="TextView"
                android:textColor="@color/colorTextInfo" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="60dp"
            android:layout_height="200dp"
            android:layout_marginLeft="60dp"
            app:cardBackgroundColor="@color/colorPurpleDark">


            <TextView
                android:id="@+id/textViewdate2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/colorTextInfo" />

            <ImageView
                android:id="@+id/imageViewWheater2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"

                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textViewtemp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/colorTextInfo" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card3"
            android:layout_width="60dp"
            android:layout_height="200dp"
            android:layout_marginLeft="120dp"
            app:cardBackgroundColor="@color/colorPurpleDark">


            <TextView
                android:id="@+id/textViewdate3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/colorTextInfo" />

            <ImageView
                android:id="@+id/imageViewWheater3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"

                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textViewtemp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/colorTextInfo" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card4"
            android:layout_width="60dp"
            android:layout_height="200dp"
            android:layout_marginLeft="180dp"
            app:cardBackgroundColor="@color/colorPurpleDark">


            <TextView
                android:id="@+id/textViewdate4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/colorTextInfo" />

            <ImageView
                android:id="@+id/imageViewWheater4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"

                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textViewtemp4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/colorTextInfo" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card5"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="240dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/colorPurpleDark">


            <TextView
                android:id="@+id/textViewdate5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/colorTextInfo" />

            <ImageView
                android:id="@+id/imageViewWheater5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"

                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textViewtemp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/colorTextInfo" />

        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>

</RelativeLayout>