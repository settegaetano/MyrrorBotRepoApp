<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codingwithsara.musicplayer.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/txtTitolo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titoloStr"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtNomeArtista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/artistaStr"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/statoPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgSpotify"
        android:layout_width="163dp"
        android:layout_height="114dp"
        android:layout_marginTop="40dp"
        android:contentDescription="image"
        android:src="@drawable/spotify"
        app:srcCompat="@drawable/spotify"
        tools:srcCompat="@drawable/spotify" />

    <!--<SeekBar
        android:id="@+id/positionBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/elapsedTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:11"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:id="@+id/remainingTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1:49"
            android:layout_marginLeft="240dp"/>
    </LinearLayout>-->

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="77dp"
        android:layout_marginTop="30dp">


        <Button
            android:id="@+id/playBtn"
            android:layout_width="41dp"
            android:layout_height="38dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/play"
            android:onClick="playBtnClick" />

        <Button
            android:id="@+id/playSkip"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="110dp"
            android:background="@drawable/ic_next" />

    </LinearLayout>

</LinearLayout>